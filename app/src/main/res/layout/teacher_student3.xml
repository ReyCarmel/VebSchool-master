<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/student_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="70dp">
        <ImageView
            android:id="@+id/student_icon"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/profile" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_below="@+id/student_layout"
        android:background="@color/colorWhite"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:layout_marginTop="190dp"
        app:cardCornerRadius="30dp"
        android:layout_marginLeft="30dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Admission No"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/t_admission"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/t_name"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight=".4"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Class"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/t_class"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Division"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/tdivision"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Roll No"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/t_rollNo"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Email"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/t_email"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Gender"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/t_gender"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Birthday"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/t_birh"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Phone"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".05"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/t_phone"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


