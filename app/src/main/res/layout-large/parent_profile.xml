<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/parent_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="70dp">
        <ImageView
            android:id="@+id/parent_profile_dp"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/profile" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_below="@+id/parent_profile_layout"
        android:background="@color/colorWhite"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:layout_marginTop="190dp"
        app:cardCornerRadius="30dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/parent_profile_name"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".4"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/times_newroman"
                   android:text="Gender"
                   android:textColor="#000"
                   android:textSize="20dp" />
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight=".4"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/times_newroman"
                   android:text=":"
                   android:id="@+id/parent_profile_gender"
                   android:textColor="#000"
                   android:textSize="20dp" />

           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Email"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/parent_profile_mail"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Address"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/parent_profile_ad"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text="Phone"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/times_newroman"
                    android:text=":"
                    android:id="@+id/parent_profile_ph"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


